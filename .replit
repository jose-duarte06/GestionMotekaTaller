modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["flask_authentication:1.0.0", "python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MOTEKA Frontend"

[[workflows.workflow]]
name = "MOTEKA Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Gestion_MOTEKA/Frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38769
externalPort = 3000
